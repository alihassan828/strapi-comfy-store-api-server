{
  "kind": "collectionType",
  "collectionName": "products",
  "info": {
    "singularName": "product",
    "pluralName": "products",
    "displayName": "Product",
    "description": ""
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string"
    },
    "company": {
      "type": "enumeration",
      "enum": [
        "Luxora",
        "Comfora",
        "Modenza",
        "Homestead",
        "Artifex"
      ]
    },
    "description": {
      "type": "text"
    },
    "featured": {
      "type": "boolean",
      "default": false
    },
    "category": {
      "type": "enumeration",
      "enum": [
        "Sofas",
        "Chairs",
        "Tables",
        "Beds",
        "Kids"
      ]
    },
    "image": {
      "type": "string",
      "default": "https://images.pexels.com/photos/1866149/pexels-photo-1866149.jpeg?auto=compress&cs=tinysrgb&w=800"
    },
    "price": {
      "type": "biginteger"
    },
    "shipping": {
      "type": "boolean",
      "default": false
    },
    "slug": {
      "type": "uid",
      "targetField": "title"
    },
    "color": {
      "type": "customField",
      "regex": "^#([A-Fa-f0-9]{6}|[A-Fa-f0-9]{3})$",
      "customField": "plugin::color-picker.color"
    },
    "shades": {
      "type": "json"
    }
  }
}
